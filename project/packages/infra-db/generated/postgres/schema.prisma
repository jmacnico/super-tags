// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../generated/postgres"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POSTGRES")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
}

model SuperTag {
  id          Int           @id @default(autoincrement())
  emoji       String
  titulo      String        @unique
  conteudo    String        @db.VarChar(500)
  icon        String        @db.VarChar(30)
  userId      Int
  propriedade Propriedade[]
}

model Propriedade {
  id         Int      @id @default(autoincrement())
  chave      String
  valor      String
  tipo       String
  superTagId Int
  tag        SuperTag @relation(fields: [superTagId], references: [id])
}
