// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../../generated/postgres"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL_POSTGRES")
}

model User {
    id       Int    @id @default(autoincrement())
    email    String @unique
    name     String
    password String
}

model SuperTag {
    id           Int             @id @default(autoincrement())
    titulo       String          @unique
    propriedades Propriedade[]
    texto        String @db.VarChar(500)
    parentId     Int?            @unique
    tagFilha     SuperTag?       @relation("PaiEFilha",  fields:[parentId], references: [id]) 
    tagPai       SuperTag?       @relation("PaiEFilha") 
}

model Propriedade {
    seqProp     Int             @id @default(autoincrement())
    chave       String
    valor       String
    tag         SuperTag        @relation(fields: [superTagId], references: [id])
    superTagId  Int     
}